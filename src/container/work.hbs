{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <p>
                <ul>
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>{{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <br>

                        <div>{{>link text=company.name href=company.url blank=true noLine=true}}</div>

                        <br>
                        <br>

                        <div>
                            <strong>Projects ({{projectAmount}})</strong>

                        </div>

                        <br>

                        <ul>
                            {{#each projects}}

                            <li>
                                {{#unless company.url}}
                                <div>{{>link text=name href=url blank=true noLine=true}}</div>
                                {{else}}
                                <b>{{company.name}}</b>
                                {{/unless}}

                                <br>

                                <div>
                                    <p>{{about}}</p>
                                </div>
                            </li>
                            <br>

                            <div>
                                <em>"Project stacks"</em>
                            </div>

                            <br>

                            <div>
                                <ul>
                                    {{#each stacks}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                            <br>
                            <strong>Project stacks ({{stackAmount}})</strong>

                            <br>
                            <br>
                            <div>
                                <em>"Project awards"</em>
                            </div>


                            <br>

                            <div>
                                <ul>
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                    </li>
                    {{/each}}
                </ul>
                </li>
                <br>
                {{/each}}
                </ul>
                </p>
            </div>
        </section>

    </main>
    {{/with}}


</div>

